<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <!--передаем в конструктор имя лог-файла-->
    <!--вызов метода init()-->
    <bean id="fileEventLogger" class="FileEventLogger" init-method="init">
        <constructor-arg value="c:\\111.txt"/>
    </bean>

    <!--<bean id="cacheFileEventLogger" class="CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="c:\\111.txt"/>
        <constructor-arg value="10"/>
    </bean>-->
    <bean id="cacheFileEventLogger" class="CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg value="10"/>
    </bean>

</beans>