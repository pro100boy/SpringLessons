<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id="app" class="App">
        <constructor-arg ref="fileEventLogger"/>
        <constructor-arg ref="client"/>
    </bean>

    <!--scope="prototype" - класс event будет создаваться каждый раз, а не единожды синглтоном-->
    <bean id="event" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <!--т.к. DateFormat - это abstract class, нужно вызывать у него статич. метод getDateTimeInstance-->
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <!--передаем в конструктор имя лог-файла-->
    <!--вызов метода init()-->
    <bean id="fileEventLogger" class="FileEventLogger" init-method="init">
        <constructor-arg value="c:\\111.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg value="10"/>
    </bean>
</beans>